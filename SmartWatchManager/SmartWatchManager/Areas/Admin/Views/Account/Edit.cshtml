@model SmartWatchManager.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">SỬA THÔNG TIN NGƯỜI DÙNG</h4>
