@model SmartWatchManager.Models.SmartWatch

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-body">
        <div class="form-group" style="display: flex;">
            <div class="col-md-4" style="display: flex; align-items: center">
                <img src="~/Content/Image/@Model.Image" style="width: 100%; height: 350px" />
            </div>
            <div class="col-md-8">
                <div class="content-item" style="padding-top: 40px;">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @Html.DisplayFor(model => model.ProductName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @*@String.Format("{0:#,##0} VNĐ", Html.DisplayFor(model => model.Price)).Replace(',', '.')*@
                            @String.Format("{0:#,##0} VNĐ", Model.Price).Replace(',', '.')
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-12">
                            @Html.DisplayFor(model => model.Quantity)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-footer">
                <div class="form-group" style=" display: flex; margin-right: 40px; align-items: flex-start; justify-content: flex-end;">
                    <input type="submit" value="Xóa" class="btn btn-danger" style="color: #fff;" />
                    <button class="form-group btn pull-left " style="background: #808080; margin-left: 24px">
                        <i class="fa fa-arrow-left" style="color: #fff"></i>
                        <a href="@Url.Action("Index", "SmartWatches")" style="color: #fff">Quay lại</a>
                    </button>
                    <button class="form-group btn pull-left " style="background: #1eaf2d; margin-left: 24px">
                        <a href="@Url.Action("Edit", "SmartWatches", new { id = Model.ProductID})" style="color: #fff">  Edit  </a>
                    </button>
                </div>


            </div>
        }
    </div>
</div>


