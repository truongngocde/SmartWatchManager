@model SmartWatchManager.Models.Contact

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Content Page -->
<div class="container-fluid bg-light py-5">
    <div class="col-md-6 m-auto text-center">
        <h1 class="h1">Liên hệ</h1>
        <p>
            Hãy phản hồi cho chúng tối biết bạn đang nghĩ gì!
        </p>
    </div>
</div>

<div class="container py-5">
    <div class="row py-5">
        @using (Html.BeginForm(new { @class = "col-md-9 m-auto" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label for="inputname">Họ và tên</label>
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="inputemail">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <label for="inputmessage">Nội dung</label>
                @Html.TextAreaFor(model => model.FContent, new { @class = "form-control mt-1",style = "height: 200px;"})
                @Html.ValidationMessageFor(model => model.FContent, "", new { @class = "text-danger" })

            </div>
            <div class="row">
                <div class="col text-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg px-3">Gửi</button>
                </div>
            </div>
        }
    </div>
</div>






