@model SmartWatchManager.Models.BillOrder

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="padding: 20px 0">
    <div class="row" style="justify-content: center">
        <div class="col-md-6">
            <h2>Xác nhận xóa đơn hàng</h2>

            <p>Bạn có chắc muốn xóa lịch sử giao dịch này không?</p>

            <dl class="dl-horizontal">
                <dt>
                    <strong>Tên đơn hàng:</strong>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderName)
                </dd>

                <dt>
                    <strong>Tên sản phẩm:</strong>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>
                    <strong>Ngày đặt hàng:</strong>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>

                <dt>
                    <strong>Số lượng:</strong>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Quantity)
                </dd>

                <dt>
                    <strong>Tổng giá:</strong>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TotalPrice)
                </dd>
            </dl>

            @using (Html.BeginForm("Delete", "SmartWatchManager", new { id = Model.OrderID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <p class="text-danger">Xác nhận xóa lịch sử giao dịch này:</p>
                <button type="submit" class="btn btn-danger">Xóa</button>  @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>


